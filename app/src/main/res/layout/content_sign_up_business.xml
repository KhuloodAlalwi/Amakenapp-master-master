<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sign_up_business"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.afaf.amakenapp.activities.SignUpBusiness"
    tools:showIn="@layout/activity_sign_up_business">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/businessEmail"
            android:hint="  Email Address"
            android:selectAllOnFocus="false"
            android:allowUndo="true"
            android:textColor="#009688"
            android:textColorHint="#9B9B9B"
            android:textColorLink="#9B9B9B"
            android:layout_marginTop="22dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/businessPassword"
            android:hint=" Password"
            android:textColorHint="#9B9B9B"
            android:layout_marginTop="12dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/businessName"
            android:hint="Business Name"
            android:textColorHint="#9B9B9B"
            android:textColor="#9B9B9B"
            android:paddingStart="15dp"
            android:paddingLeft="15dp" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/businessWebUrl"
            android:hint="Business Web URL (optional)"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:paddingStart="15dp"
            android:paddingLeft="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/businessPhoneNumber"
            android:hint="Business Phone Number"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:paddingStart="15dp"
            android:paddingLeft="15dp" />

        <Button
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SignUpBusiness" />


    </LinearLayout>

</RelativeLayout>
